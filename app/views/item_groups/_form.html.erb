 <div class="container">


      <div class="row">
        <div class="col-md-offset-2 col-md-6">
          <div class="well well1">

            <%= form_for @item_group do |f| %>
    <form>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-3">
              <label>Name</label></div>
            <div class="col-md-8">
              <%= f.text_field :name, {class: "form-control"} %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-3">
              <label>Parent ID </label></div>
            <div class="col-md-8">
             <%= f.collection_select :parent_id, ItemGroup.all, :id, :name, {prompt: "Select Item Group"}, {class: "form-control"} %>
            </div>
          </div>
        </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-3">
            <label>Description</label></div>
          <div class="col-md-8">
            <%= f.text_area :description, {class: "form-control"}%>
          </div>
        </div>
      </div>

      

       <p> <button type="submit" class="btn btn-primary">SAVE</button>
        </p>


    </form>
<% end %>
            </div>
          </div>
        </div>
      </div>
