<div class="container">
  <div class="page-header">
    <b>CUSTOMERS</b>
    </div>
  <br>
  <p><a href="/customers/new" class="btn btn-primary">ADD NEW</a>
  </p>
  <div class="table-responsive">
    <table  class="table table-condensed table-hover">

      <thead>
      <tr>
        <th>S.N.</th>
        <th>Name</th>
        <th>Address</th>
        <th>Phone No.</th>
        <th>Edit/Delete</th>
      </tr>
      </thead>

      <% @customer.each_with_index do |customer,i| %>

          <tbody>
          <tr>
            <td><%= (@page.to_i - 1) *4+i+1 %></td>
            <td> <%= customer.name %></td>
            <td> <%= customer.address %></td>
            <td> <%= customer.phone_no %></td>
            <td>
              <a href="<%= edit_customer_path(customer)%>" data-toggle="tooltip" title="EDIT"><i class="fa fa-eye fa-lg" aria-hidden="true"> </i></a>
              &nbsp <a data-method="delete" href="<%= customer_path(customer)%>" data-confirm="Files will be permanently deleted?" data-toggle="tooltip" title="DELETE"><i class="fa fa-trash fa-lg" aria-hidden="true"> </i></a>
            </td>
          </tr>
          </tbody>

      <% end %>
    </table>
  </div>
  <%= will_paginate @customer, renderer: BootstrapPagination::Rails %>
</div>