<div class="container">

  <div class="page-header">
    <b>STOCKS</b>
    </div>

  <br>

  <p><a href="/stocks/new" class="btn btn-primary">ADD NEW</a>
  </p>
  <div class="table-responsive">
    <table  class="table table-condensed table-hover">

      <thead>
      <tr>
        <th>S.N.</th>
        <th>Item Name</th>
        <th>Item Group</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Estimated Sell Price</th>
        <th>Edit/Delete</th>
      </tr>
      </thead>

      <% @stock.each_with_index do |stock,i| %>

          <tbody>
          <tr>
            <td> <%= (@page.to_i - 1) *4+i+1 %></td>
            <td> <%= stock.item.name %></td>
            <td> <%= stock.item.item_group.name %></td>
            <td> <%= stock.quantity %></td>
            <td> <%= stock.unit_price %></td>
            <td> <%= stock.est_sell_price %></td>
            <td>
              <a href="<%= edit_stock_path(stock)%>" data-toggle="tooltip" title="EDIT"><i class="fa fa-eye fa-lg" aria-hidden="true"> </i></a>
              &nbsp <a data-method="delete" href="<%= stock_path(stock)%>" data-confirm="Files will be permanently deleted?" data-toggle="tooltip" title="DELETE"><i class="fa fa-trash fa-lg" aria-hidden="true"> </i></a>
            </td>
          </tr>
          </tbody>

      <% end %>
    </table>
  </div>
  <%= will_paginate @stock, renderer: BootstrapPagination::Rails %>
</div>