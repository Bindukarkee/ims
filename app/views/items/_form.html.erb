 <div class="container">


      <div class="row">
        <div class="col-md-offset-2 col-md-6">
          <div class="well well1">

            <%= form_for @item do |f| %>
    <form>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-3">
              <label>Name</label></div>
            <div class="col-md-8">
              <%= f.text_field :name, {class: "form-control"} %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-sm-3">
              <label>Unit </label></div>
            <div class="col-md-8">
             <%= f.collection_select :unit_id, Unit.all, :id, :name, {prompt:"Select unit"}, {class: "form-control"}%>
            </div>
          </div>
        </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-3">
            <label>Item Code</label></div>
          <div class="col-md-8">
            <%= f.text_field :item_code, {class: "form-control"}%>
          </div>
        </div>
      </div>


      <div class="form-group">
        <div class="row">
          <div class="col-sm-3">
            <label>Item Group </label></div>
          <div class="col-md-8">
           <%= f.collection_select :item_group_id, ItemGroup.all, :id, :name, {prompt:"Select item group"}, {class: "form-control"}%>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-3">
            <label>Description</label></div>
          <div class="col-md-8">
            <%= f.text_area :description, {class: "form-control"}%>
          </div>
        </div>
      </div>

      <%= f.fields_for :stock do |g|%>

          <div class="form-group">
          <div class="row">
            <div class="col-sm-3">
          <%= g.label :quantity%></div>
              <div class="col-md-8">
            <%= g.text_field :quantity, {class: "form-control"}%>
              </div>
            </div>
          </div>


              <div class="form-group">
              <div class="row">
                <div class="col-sm-3">
            <%= g.label :unit_price %></div>
                  <div class="col-md-8">
            <%= g.text_field :unit_price, {class: "form-control"} %>
                  </div>
                </div>
              </div>


                  <div class="form-group">
                  <div class="row">
                    <div class="col-sm-3">
            <%= g.label :est_sell_price%></div>
                      <div class="col-md-8">
            <%= g.text_field :est_sell_price, {class: "form-control"} %>
                      </div>
                    </div>
                  </div>


      <% end %>

       <p> <button type="submit" class="btn btn-primary">SAVE</button>
        </p>


    </form>
<% end %>
            </div>
          </div>
        </div>
      </div>
